  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.0.0",
    "@ln-maf/core": "file:../core",
    "@ln-maf/validations": "file:../validations",
    "concurrently": "^8.0.0",
    "multiple-cucumber-html-reporter": "3.7.0",
    "nyc": "^17.0.0",
    "wait-on": "^7.0.1"
  },
