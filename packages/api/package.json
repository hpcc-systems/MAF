{
  "name": "@ln-maf/api",
  "publishConfig": {
    "access": "public"
  },
  "version": "4.0.0",
  "description": "MAF module providing API steps",
  "main": "index.js",
  "scripts": {
    "start:test-server": "node ./test/testApiServer.js",
    "test": "concurrently -k -s first -n server,test \"npm run start:test-server\" \"wait-on tcp:3001 && bash runFeature.sh\"",
